#!/bin/bash

set -x

set -eo pipefail

# Execute original assemble script.

/opt/app-root/builder/assemble

mkdir -p /opt/app-root/share/R/libs
echo -e 'R_LIBS_USER=/opt/app-root/share/R/libs' > /opt/app-root/src/.Renviron

# Install the Kernel
R --no-save -e 'install.packages("IRkernel"); IRkernel::installspec(prefix = "/opt/app-root/")'

# Activate ipywidgets extension.

jupyter nbextension enable --py widgetsnbextension --sys-prefix

# Also activate ipywidgets extension for JupyterLab.
# jupyter labextension install @jupyter-widgets/jupyterlab-manager@1

# Install facets which does not have a pip package.

cd /tmp

git clone https://github.com/PAIR-code/facets.git

cd facets

jupyter nbextension install facets-dist/ --sys-prefix

cd $HOME

rm -rf /tmp/facets

# Import matplotlib the first time to build the font cache.

MPLBACKEND=Agg python -c "import matplotlib.pyplot"

# Fix up permissions.

fix-permissions /opt/app-root
